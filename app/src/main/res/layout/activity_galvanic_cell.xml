<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#FFFFFF"
             tools:context="com.galvandroid.galvandroid.GalvanicCellActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <RelativeLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/left_beaker"
            android:layout_alignStart="@+id/left_beaker"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:src="@drawable/vector_drawable_metal"/>

        <ImageButton
            android:id="@+id/left_beaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:background="@null"
            android:src="@drawable/vector_drawable_beaker"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/right_beaker"
            android:layout_alignRight="@+id/right_beaker"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:src="@drawable/vector_drawable_metal"/>

        <ImageButton
            android:id="@+id/right_beaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/left_beaker"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:src="@drawable/vector_drawable_beaker"/>
    </RelativeLayout>


</FrameLayout>