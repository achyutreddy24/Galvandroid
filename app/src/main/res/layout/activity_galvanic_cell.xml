<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#FFFFFF"
             tools:context="com.galvandroid.galvandroid.GalvanicCellActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <RelativeLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/salt_bridge"
            android:src="@drawable/salt_bridge"
            android:layout_alignBottom="@+id/left_molarity"
            android:layout_toLeftOf="@+id/metal2"
            android:layout_toRightOf="@+id/metal1"
            android:layout_toEndOf="@+id/metal1"
            android:layout_toStartOf="@+id/metal2"
            android:layout_marginBottom="50dp"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/left_beaker"
            android:layout_alignStart="@+id/left_beaker"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:src="@drawable/vector_drawable_metal"/>

        <ImageButton
            android:id="@+id/left_beaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:background="@null"
            android:src="@drawable/vector_drawable_beaker"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/right_beaker"
            android:layout_alignRight="@+id/right_beaker"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:src="@drawable/vector_drawable_metal"/>

        <ImageButton
            android:id="@+id/right_beaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/left_beaker"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:src="@drawable/vector_drawable_beaker"/>

        <TextView
            android:id="@+id/left_molarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignEnd="@+id/left_beaker"
            android:layout_alignRight="@+id/left_beaker"
            android:layout_marginRight="70dp"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/metal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="New Text"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/metal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView4"
            android:layout_alignRight="@+id/imageView4"
            android:layout_alignTop="@+id/imageView4"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="New Text"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/right_molarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_toLeftOf="@+id/imageView4"
            android:layout_toStartOf="@+id/imageView4"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000"
            android:paddingBottom="5dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/electron"
            android:src="@drawable/electron_none"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/metal1"
            android:layout_alignStart="@+id/metal1"
            android:layout_above="@+id/imageView2"
            android:layout_alignRight="@+id/metal2"
            android:layout_alignEnd="@+id/metal2"
            android:layout_marginTop="45dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/voltage"
            android:layout_alignBottom="@+id/electron"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/right_label"
            android:layout_below="@+id/salt_bridge"
            android:layout_toLeftOf="@+id/right_beaker"
            android:layout_toStartOf="@+id/right_beaker"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/left_label"
            android:textColor="#000000"
            android:layout_alignTop="@+id/right_label"
            android:layout_toRightOf="@+id/left_beaker"
            android:layout_toEndOf="@+id/left_beaker"
            android:layout_marginLeft="-20dp"/>

    </RelativeLayout>


</FrameLayout>